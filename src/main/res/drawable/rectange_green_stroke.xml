<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape>
            <solid android:color="@color/app_white" />

            <stroke android:width="1dp" android:color="@color/app_green" />
        </shape></item>
    <item android:state_focused="false"><shape>
            <solid android:color="@color/app_white" />
            <stroke android:width="1dp" android:color="@color/app_gray_line" />
        </shape></item>

</selector>