<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/wrashvolume"
        android:id="@+id/color_im" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/color_im"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            >
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="洗车券"
                android:textSize="@dimen/text_size_20"
                android:textColor="@color/app_white"
                android:gravity="center"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.6"
            android:layout_marginLeft="15dp"
           >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                >
                <TextView
                    android:id="@+id/content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="免费洗车一次"
                    android:textSize="@dimen/text_size_20"
                    android:textColor="@color/app_white"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <ImageView
                    android:id="@+id/status_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/overdue"
                    android:layout_alignParentRight="true"
                    android:layout_margin="15dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
               android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用范围:"
                    android:textSize="@dimen/text_size_8"
                    android:textColor="@color/app_white"
                    />
                <TextView
                    android:id="@+id/usescope_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textView1"
                    android:text="仅限金华市区"
                    android:textSize="@dimen/text_size_8"
                    android:textColor="@color/app_white"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/expire_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016年2月7日"
                    android:textSize="@dimen/text_size_8"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/app_white"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/expire_time"
                    android:textColor="@color/app_white"
                    android:textSize="@dimen/text_size_8"
                    android:text="有效期至:"
                    />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
