<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/app_white"
    android:paddingBottom="10dp" >

    <LinearLayout
        android:id="@+id/dialog_prompt_title_ll"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/app_green"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_prompt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_prompt_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_prompt_title_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="提示信息"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_prompt_message"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/dialog_prompt_ok"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/green_btn"
                android:text="确定"
                android:textColor="@color/app_white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_prompt_cancel_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/dialog_prompt_cancel"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="@drawable/green_btn"
                android:text="取消"
                android:textColor="@color/app_white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>