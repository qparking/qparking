<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/park_img_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/park_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/park_img_iv"
            android:layout_toRightOf="@+id/park_img_iv"
            android:text="美宝龙停车场Test"
            android:textColor="@color/app_text_black" />

        <TextView
            android:id="@+id/consumption_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/park_name_tv"
            android:layout_alignStart="@+id/park_name_tv"
            android:layout_below="@+id/park_name_tv"
            android:layout_marginTop="10dp"
            android:text="2015-11-04"
            android:textColor="@color/app_text_black" />

        <TextView
            android:id="@+id/consumption_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/park_name_tv"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="15dp"
            android:text="¥:30元"
            android:textColor="@color/app_text_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/consumption_money_tv"
            android:layout_alignStart="@+id/consumption_money_tv"
            android:layout_alignTop="@+id/consumption_time_tv"
            android:text="微信支付"
            android:textColor="@color/app_text_black"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray" />
</LinearLayout>
