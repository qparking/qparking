<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff" >

        <View
            android:id="@+id/viewParkingInfoBack"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="false"
            android:layout_centerVertical="false"
            android:background="#F9F9F9" />

        <TextView
            android:id="@+id/tvResultName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tvSearchDistance"
            android:layout_centerVertical="false"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#696969"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tvResultAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/viewParkingInfoBack"
            android:layout_alignLeft="@+id/tvResultName"
            android:layout_marginBottom="14dp"
            android:layout_toLeftOf="@+id/tvSearchDistance"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#a6a6a6"
            android:textSize="12sp"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/ivUIMask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvResultAddress"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/tvSearchDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivUIMask"
            android:layout_toLeftOf="@+id/ivUIMask"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#a6a6a6"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>
