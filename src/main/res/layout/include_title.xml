<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_rl"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#FF00c1a0"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/include_back_left_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_left_margin" >

        <ImageView
            android:id="@+id/include_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="15dp" />

        <TextView
            android:id="@+id/include_tv_cancel"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textColor="@color/app_title_font"
            android:textSize="19sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/include_ll_record"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/include_tv_title"
            android:layout_width="170dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/app_white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/include_iv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/include_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_right_margin"
        android:textColor="@color/app_title_font"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/include_iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_right_margin"
        android:textSize="19sp" />

</RelativeLayout>